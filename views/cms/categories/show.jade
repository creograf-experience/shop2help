.category-link
  span Ссылка на страницу: 
  a(ng-href='/catalog/{{category.slug}}') {{category.slug}}
  br

vit-attached-file(vit-file='category.image'
  vit-file-add='onFileAdd(file)'
    vit-file-remove='onFileRemove()')

form(novalidate name='categoryForm' ng-submit='updateCategory()' ng-model='category')
  .form-group
    label Название
    input.form-control(type='text' required
      ng-model='category.title' name='title' vit-autofocus ng-model-options='modelOptions')
  .form-group
    label Описание
    textarea.form-control(
      ng-model='category.body' name='body' ng-model-options='modelOptions')
  .form-group
    label Ссылка
    input.form-control(type='text' ng-model='category.slug'
      ng-model-options='modelOptions')
  .checkbox
    label
      input(type='checkbox' ng-model='category.visible'
        ng-change='updateCategory()' ng-checked='category.visible')
      span видимость в каталоге
  .form-group
    label Заголовок для SEO
    input.form-control(type='text' ng-model='category.seotitle'
      ng-model-options='modelOptions')
  .form-group
    label Ключевые слова
    input.form-control(type='text' ng-model='category.seokeywords'
      ng-model-options='modelOptions')
  .form-group
    label Описание
    input.form-control(type='text' ng-model='category.seodescr'
      ng-model-options='modelOptions')
  .form-group
    button.btn.btn-green(type='submit' ng-disabled='categoryForm.$invalid') Обновить
    button.btn.btn-gray(type='button' ng-click='deleteCategory()') Удалить
