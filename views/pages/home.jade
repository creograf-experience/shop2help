                li
                  a(ui-sref="pages.faq") ЧАВО
            .wrapper.visible-xs
              .signin(ui-sref="pages.home.login" )
                img.icon-men(src='/landing/img/icon-men.png', alt='')
                .icon-text.signin-icon Вход
              a.blue-btn(ui-sref="pages.home.activate" ) Регистрация
          .col-lg-4.col-md-12
            .wrapper.hidden-xs(ng-class="user.login ? 'hidden' : '' ")
              .signin(ui-sref="pages.home.login" style="display:flex;align-items:center")
                img.icon-men(src='/landing/img/icon-men.png', alt='' style="margin-right: 20px")
                .icon-text Вход
              a.blue-btn(ui-sref="pages.home.activate" ) Регистрация
          .clearfix
